---
import { Picture } from "astro:assets";
import HeaderMenus from "./HeaderMenus";
import RyuuLogo from "/public/logo.webp";
const subtitle = "เครื่องดื่มมัทฉะ";
---

<header class="sticky top-0 h-16 shadow navbar z-header bg-base-100 lg:h-24">
  <div class="flex navbar-start gap-x-1 md:gap-x-4">
    <HeaderMenus vairiant="mobile" client:load />
    <Picture
      class="hidden rounded-full aspect-square md:block text-base/none"
      width={44}
      height={44}
      src={RyuuLogo}
      densities={[1, 2]}
      alt="RYUU Matcha Logo"
    />
    <div class="flex flex-col">
      <h1 class="text-lg font-bold">RYŪU</h1>
      <p class="text-xs sr-only md:not-sr-only">{subtitle}</p>
    </div>
  </div>
  <div class="flex flex-row flex-grow navbar-center md:flex-col"></div>
  <HeaderMenus vairiant="desktop" client:load />
</header>
