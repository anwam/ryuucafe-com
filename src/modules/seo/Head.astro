---
import { SEO } from "astro-seo";
import FeatureImage from "../../assets/images/home/feature-1.webp";

type Props = {
  title?: string;
  description?: string;
  openGraph?: {
    basic: {
      title: string;
      type: string;
      image: string;
    };
  };
};
const {
  title = "RYŪU | ริว",
  description = "เครื่องดื่มมัทฉะ",
  openGraph = {
    basic: {
      title: "RYŪU | ริว",
      type: "website",
      image: FeatureImage.src,
    },
  },
}: Props = Astro.props;
---

<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  <SEO title={title} description={description} openGraph={openGraph} />
</head>
